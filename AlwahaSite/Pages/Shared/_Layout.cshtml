@using Microsoft.AspNetCore.Http.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content="@ViewData["Description"]"/>
    <meta name="keywords" content="@(ViewData["Keywords"] ?? "alwaha, al waha, lebanese, restaurant, food, london, bayswater, hyde park, quality food, starters, mains, salad, dinner, lunch, lebanese restaurant, grill, mezze, lebanese catering, catering, tapas, lebanese tapas")"/>
    <meta name="author" content="Alwaha London"/>
    <meta name="robots" content="index, menu, events, contact, privacy"/>
    <link rel="canonical" href="@Context.Request.GetDisplayUrl()" />
    <meta property="og:description" content="@ViewData["Description"]">
    <meta property="og:type" content="website">
    <meta property="og:url" content="@Context.Request.GetDisplayUrl()">
    <meta property="og:image" content="https://www.alwahalondon.co.uk/img/logo.jpg">
    <meta name="twitter:title" content="@ViewData["Title"]">
    <meta name="twitter:description" content="@ViewData["Description"]">
    <meta name="twitter:image" content="https://www.alwahalondon.co.uk/img/logo.jpg">
    <link rel="sitemap" type="application/xml" href="./sitemap.xml">
    
    <title>@ViewData["Title"] - Alwaha London</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AlwahaSite.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/ej2.min.css" asp-append-version="true"/>
    <script src="~/js/ej2.min.js"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark py-1 shadow-sm border-bottom border-primary border-3 purple-gradient">
        <div class="container">
            @* <a class="navbar-brand fw-bold fs-4 brand-hover" asp-area="" asp-page="/Index"> *@
            @*     <i class="fa-solid fa-utensils me-2 text-danger"></i>Alwaha London *@
            @* </a> *@
            <img src="~/img/logo.png" alt="Alwaha Logo" class="brand-hover" width="80%" style="cursor: pointer; max-width: 250px" onclick="location.assign('/Index')"/>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom px-3" asp-area="" asp-page="/Menu">
                            <i class="fa-solid fa-utensils me-2"></i>Menu
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom px-3" asp-area="" asp-page="/Events">
                            <i class="fa-solid fa-calendar me-2"></i>Events & Catering
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-custom px-3" asp-area="" asp-page="/Contact">
                            <i class="fa-solid fa-envelope me-2"></i>Contact Us
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<main role="main" class="flex-grow-1">
    <div class="container pb-3">
        @RenderBody()
    </div>
</main>

<footer class="footer-custom purple-gradient border-top border-primary border-3 mt-5">
    <div class="container py-4">
        <div class="row g-4">
            <!-- Map Section -->
            <div class="col-lg-5 col-md-6">
                <img src="./img/map.png" alt="Map location of Alwaha London Restaurant" class="img-fluid rounded shadow-sm" width="100%"/>
            </div>

            <!-- Contact Info Section -->
            <div class="col-lg-4 col-md-6">
                <h5 class="mb-3 fw-bold text-white">
                    <i class="fa-solid fa-location-dot me-2"></i>Visit Us
                </h5>
                <p class="mb-3">
                    <strong>75 Westbourne Grove</strong><br/>
                    London<br/>
                    W2 4UL
                </p>

                <h6 class="mb-2 fw-bold text-white">
                    <i class="fa-solid fa-phone me-2"></i>Phone
                </h6>
                <p class="mb-3">
                    <a href="tel:+442071234567" class="footer-link text-decoration-none">+44 20 7123 4567</a>
                </p>

                <h6 class="mb-2 fw-bold text-white">
                    <i class="fa-solid fa-envelope me-2"></i>Email
                </h6>
                <p class="mb-3">
                    <a href="mailto:info@alwahalondon.co.uk" class="footer-link text-decoration-none">info@alwahalondon.co.uk</a>
                </p>

                <div class="mt-3">
                    <button onclick="location.assign('https://maps.apple.com/?address=75+Westbourne+Grove,+London,+W2+4UL')"
                       target="_blank"
                       class="btn btn-sm btn-primary mb-2 me-2">
                        <i class="fa-solid fa-map-location-dot me-1"></i>Get Directions (iOS)
                    </button>
                    <button onclick="location.assign('https://www.google.com/maps/dir/?api=1&destination=75+Westbourne+Grove,+London,+W2+4UL')"
                       target="_blank"
                       class="btn btn-sm btn-primary mb-2">
                        <i class="fa-solid fa-map-location-dot me-1"></i>Get Directions (Android)
                    </button>
                </div>
            </div>

            <!-- Quick Links Section -->
            <div class="col-lg-3 col-md-12 text-lg-end">
                <h5 class="mb-3 fw-bold text-white">Quick Links</h5>
                <div class="d-flex flex-column gap-2">
                    <a asp-area="" asp-page="/Menu" class="footer-link text-decoration-none">
                        <i class="fa-solid fa-utensils me-2"></i>View Menu
                    </a>
                    <a asp-area="" asp-page="/Contact" class="footer-link text-decoration-none">
                        <i class="fa-solid fa-envelope me-2"></i>Contact Us
                    </a>
                    <a asp-area="" asp-page="/Privacy" class="footer-link text-decoration-none">
                        <i class="fa-solid fa-shield-halved me-2"></i>Privacy Policy
                    </a>
                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="row mt-4 pt-3 border-top border-secondary border-2">
            <div class="col text-center">
                <p class="mb-0 small text-white-50">&copy; 2025 Alwaha London. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://kit.fontawesome.com/29bf1169ee.js" crossorigin="anonymous"></script>
<script type="application/ld+json">
{
  "@@context": "https://schema.org",
  "@@type": "Restaurant",
  "name": "Alwaha London",
  "image": "https://www.alwahalondon.co.uk/img/logo.jpg",
  "address": {
    "@@type": "PostalAddress",
    "streetAddress": "75 Westbourne Grove",
    "addressLocality": "London",
    "postalCode": "W2 4UL",
    "addressCountry": "GB"
  },
  "telephone": "+44 20 7229 0806",
  "servesCuisine": ["Lebanese"],
  "url": "https://www.alwahalondon.co.uk"
}
</script>

<!-- Alwaha Analytics -->
<script>
  window.alwahaAnalyticsConfig = {
    //apiUrl: 'https://management.alwahalondon.co.uk/api/analytics/track'
    apiUrl: 'https://localhost:5165/api/analytics/track'
  };
</script>
<script src="~/js/alwaha-analytics.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>