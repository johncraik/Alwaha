@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="text-center">
        <div class="mb-4">
            <i class="fa-solid fa-triangle-exclamation text-danger" style="font-size: 7rem;"></i>
        </div>
        <h1 class="display-3 fw-bold mb-3">Uh oh!</h1>
        <h2 class="h4 text-muted mb-4">Something went wrong</h2>
        <p class="text-muted mb-4">
            We're sorry, but an error occurred while processing your request.<br>
            Please try again or go back to the previous page.
        </p>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted small mb-4">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <div class="d-flex gap-3 justify-content-center flex-wrap mt-4">
            <a href="javascript:history.back()" class="btn btn-primary btn-lg px-4">
                <i class="fa-solid fa-arrow-left me-2"></i>
                Go Back
            </a>
            <a asp-page="/Contact" class="btn btn-outline-secondary btn-lg px-4">
                <i class="fa-solid fa-envelope me-2"></i>
                Contact Us
            </a>
        </div>
    </div>
</div>