@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 60vh;">
    <div class="text-center">
        <div class="mb-4">
            <i class="fa-solid fa-circle-exclamation text-danger" style="font-size: 5rem;"></i>
        </div>
        <h1 class="display-4 fw-bold text-danger mb-3">System Error</h1>
        <h2 class="h4 text-muted mb-4">An unexpected error has occurred</h2>

        @if (Model.ShowRequestId)
        {
            <div class="alert alert-light border shadow-sm d-inline-block mb-4">
                <strong>Request ID:</strong> <code class="text-danger">@Model.RequestId</code>
            </div>
        }

        <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px;">
            <div class="card-body p-4">
                <h5 class="card-title mb-3"><i class="fa-solid fa-phone me-2"></i>Need Assistance?</h5>
                <p class="card-text text-muted mb-3">
                    If this error persists, please get in touch with the site developer for support.
                </p>
                <div class="d-grid gap-2">
                    <a href="javascript:history.back()" class="btn btn-primary">
                        <i class="fa-solid fa-arrow-left me-2"></i>Go Back
                    </a>
                    <a asp-page="/Index" class="btn btn-outline-secondary">
                        <i class="fa-solid fa-home me-2"></i>Return to Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>