<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Alwaha Management</title>
    <script type="importmap"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.2/Sortable.min.js" defer></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/AlwahaManagement.styles.css" asp-append-version="true"/>
    <!-- Syncfusion Bootstrap 5 Theme -->
    <link href="https://cdn.syncfusion.com/ej2/27.1.48/bootstrap5.css" rel="stylesheet"/>
    <script src="https://cdn.syncfusion.com/ej2/27.1.48/dist/ej2.min.js"></script>
    <link rel="stylesheet" href="~/css/sweetalert2.css" asp-append-version="true"/>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.14.5/dist/sweetalert2.min.css" rel="stylesheet">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm mb-3 py-3">
        <div class="container-fluid px-4">
            <a class="navbar-brand fw-bold fs-4" asp-area="" asp-page="/Index">Alwaha Management Portal</a>
            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse" id="navbarContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fw-semibold px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Menu
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" asp-page="/Menu/Index"><i class="fa-solid fa-utensils me-2"></i>Menu Items</a></li>
                            <li><a class="dropdown-item" asp-page="/Menu/Sets/Index"><i class="fa-solid fa-layer-group me-2"></i>Menu Sets</a></li>
                            <li><a class="dropdown-item" asp-page="/Menu/Bundles/Index"><i class="fa-solid fa-box me-2"></i>Menu Bundles</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-page="/Menu/ItemTypes/Index"><i class="fa-solid fa-gear me-2"></i>Menu Item Types</a></li>
                            <li><a class="dropdown-item" asp-page="/Menu/Tags/Index"><i class="fa-solid fa-tags me-2"></i>Menu Item Tags (Allergies)</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fw-semibold px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Analytics
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" asp-page="/Analytics"><i class="fa-solid fa-chart-line me-2"></i>Website Analytics</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-page="/Audit/User"><i class="fa-solid fa-user-clock me-2"></i>User Audit Trail</a></li>
                            <li><a class="dropdown-item" asp-page="/Audit/Data"><i class="fa-solid fa-clock-rotate-left me-2"></i>Data Audit Trail</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle fw-semibold px-3" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            System
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" asp-page="/Settings"><i class="fa-solid fa-cog me-2"></i>Application Settings</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-page="/Users/Index"><i class="fa-solid fa-users me-2"></i>View Users</a></li>
                            <li><a class="dropdown-item" asp-page="/Users/Create"><i class="fa-solid fa-user-plus me-2"></i>Create User</a></li>
                        </ul>
                    </li>
                </ul>
                <div class="d-flex">
                    <partial name="_LoginPartial"/>
                </div>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
        <partial name="_BugReport"/>
        <ejs-scripts></ejs-scripts>
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - Alwaha Management
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://kit.fontawesome.com/29bf1169ee.js" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="~/js/sweetalert2.min.js" asp-append-version="true"></script>
<script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>