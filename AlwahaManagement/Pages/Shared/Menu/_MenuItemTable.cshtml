@using AlwahaLibrary.Services
@model (List<IGrouping<AlwahaLibrary.Models.ItemType, AlwahaLibrary.Models.MenuItem>> Items, bool FromSet, bool IsRestore)
@inject UserInfo UserInfo

@if (!Model.Items.Any())
{
    <div class="alert alert-info text-center">
        <i class="fa-solid fa-info-circle me-2"></i>No menu items found.
    </div>
}

@foreach (var group in Model.Items)
{
    <div class="mb-5">
        @if (Model.FromSet)
        {
            <p class="mb-3 pb-2 border-bottom border-3 fw-semibold fst-italic">@group.Key.Name</p>
        }
        else
        {
            <h5 class="mb-3 pb-2 border-bottom border-3">@group.Key.Name</h5>
        }
        <div class="row">
            @foreach (var item in group.OrderBy(i => i.Name))
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4 px-3">
                    <div class="card shadow-sm h-100 menu-item-card">
                        <div class="card-header py-3 position-relative clearfix" id="header-@item.ItemId" style="background: linear-gradient(135deg, @(item.IsAvailable ? "#6366f1 0%, #8b5cf6" : "#6c757d 0%, #868e96") 100%);">
                            <div class="float-start">
                                <h5 class="card-title mb-0 text-white fw-bold @(!item.IsAvailable ? "fst-italic" : "")">@item.Name</h5>
                            </div>
                            @if (!Model.FromSet)
                            {
                                @if (Model.IsRestore && UserInfo.CanRestore())
                                {
                                    <button type="button" class="btn btn-sm btn-success float-end"
                                            title="Restore Menu Item" onclick="confirmRestore('@item.Name', '/Menu/RestoreItem?id=@item.ItemId', 'menu-list', '/Menu/GetMenuItemsList?isRestore=true')">
                                        <i class="fa-solid fa-trash-restore"></i> Restore
                                    </button>
                                }
                                else
                                {
                                    @if (UserInfo.CanDelete())
                                    {
                                        <button type="button" class="btn btn-sm btn-danger float-end"
                                                title="Delete Menu Item" onclick="confirmDelete('@item.Name', '/Menu/DeleteItem?id=@item.ItemId', 'menu-list', '/Menu/GetMenuItemsList')">
                                            <i class="fa-solid fa-trash"></i> Delete
                                        </button>
                                    }
                                    @if (UserInfo.CanEdit())
                                    {
                                        <button type="button" class="btn btn-sm btn-primary float-end"
                                                title="Edit Menu Item" onclick="location.assign('/Menu/Edit/@item.ItemId')">
                                            <i class="fa-solid fa-pencil"></i> Edit
                                        </button>
                                    }
                                }
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="card-text flex-grow-1 text-muted">@item.Description</p>
                            @if (item.ItemsToTags?.Any() == true)
                            {
                                <div class="mb-2">
                                    @foreach (var itemToTag in item.ItemsToTags.Where(itt => !itt.ItemTag.IsDeleted))
                                    {
                                        <span class="me-2 mb-2 d-inline-block">
                                            <partial name="Menu/_ItemTagBadge" model="itemToTag.ItemTag"/>
                                        </span>
                                    }
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <span class="fs-5 fw-bold text-primary">@item.Price.ToString("C")</span>
                                @if (!Model.FromSet && !Model.IsRestore && UserInfo.CanEdit())
                                {
                                    <div class="form-check form-switch">
                                        @if (item.IsAvailable)
                                        {
                                            <input class="form-check-input" type="checkbox" id="toggle-@item.ItemId" checked onchange="toggleAvailability('@item.ItemId', false)"/>
                                        }
                                        else
                                        {
                                            <input class="form-check-input" type="checkbox" id="toggle-@item.ItemId" onchange="toggleAvailability('@item.ItemId', true)"/>
                                        }
                                        <label class="form-check-label" id="label-@item.ItemId" for="toggle-@item.ItemId">@(item.IsAvailable ? "Available" : "Unavailable")</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
