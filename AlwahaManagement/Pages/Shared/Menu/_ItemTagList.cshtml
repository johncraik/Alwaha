@model List<AlwahaLibrary.Models.ItemTag>

<div class="row">
    @foreach (var tag in Model)
    {
        <div class="col-12 col-md-6 col-lg-4 mb-4 px-3">
            <div class="card shadow-sm h-100 menu-item-card">
                <div class="card-header py-3 position-relative clearfix" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);">
                    <div class="float-start">
                        <h5 class="card-title mb-1 text-white fw-bold">@tag.Name</h5>
                        <span class="badge bg-light text-dark fw-normal">@tag.Icon</span>
                    </div>
                    <button type="button" class="btn btn-sm btn-danger float-end"
                            title="Delete Tag" onclick="confirmDelete('@tag.Name', '/Menu/DeleteTag?id=@tag.TagId', '/Menu/GetItemTagsList')">
                        <i class="fa-solid fa-trash"></i> Delete
                    </button>
                    <button type="button" class="btn btn-sm btn-primary float-end"
                            title="Edit Tag" onclick="location.assign('/Menu/Tags/Edit/@tag.TagId')">
                        <i class="fa-solid fa-pencil"></i> Edit
                    </button>
                </div>
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <span class="badge" style="background-color: @tag.Colour; font-size: 1rem; padding: 0.5rem 1rem;">
                            @tag.Colour
                        </span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>