@model List<IGrouping<AlwahaLibrary.Models.ItemType, AlwahaLibrary.Models.BundleItem>>

@foreach (var group in Model)
{
    <div class="mb-5">
        <h5 class="mb-3 pb-2 border-bottom border-3">@group.Key.Name</h5>
        <div class="row">
            @foreach (var bundle in group.OrderBy(b => b.MenuItem.Name))
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4 px-3">
                    <div class="card shadow-sm h-100 menu-item-card">
                        <div class="card-header py-3 position-relative clearfix" id="header-@bundle.BundleId" style="background: linear-gradient(135deg, @(bundle.MenuItem.IsAvailable ? "#6366f1 0%, #8b5cf6" : "#6c757d 0%, #868e96") 100%);">
                            <div class="float-start">
                                <h5 class="card-title mb-0 text-white fw-bold @(!bundle.MenuItem.IsAvailable ? "fst-italic" : "")">@bundle.MenuItem.Name</h5>
                            </div>
                            <button type="button" class="btn btn-sm btn-danger float-end"
                                    title="Delete Bundle" onclick="confirmDelete('@bundle.MenuItem.Name', '/Menu/DeleteBundle?id=@bundle.BundleId', 'bundle-list', '/Menu/GetBundlesList')">
                                <i class="fa-solid fa-trash"></i> Delete
                            </button>
                            <button type="button" class="btn btn-sm btn-primary float-end"
                                    title="Edit Bundle" onclick="location.assign('/Menu/Bundles/Edit/@bundle.BundleId')">
                                <i class="fa-solid fa-pencil"></i> Edit
                            </button>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="card-text flex-grow-1 text-muted">@bundle.MenuItem.Description</p>
                            @if (bundle.MenuItem.ItemsToTags?.Any() == true)
                            {
                                <div class="mb-2">
                                    @foreach (var itemToTag in bundle.MenuItem.ItemsToTags)
                                    {
                                        <span class="me-2 mb-2 d-inline-block">
                                            <partial name="Shared/Menu/_ItemTagBadge" model="itemToTag.ItemTag"/>
                                        </span>
                                    }
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div>
                                    <div>
                                        <span class="fs-5 fw-bold text-primary">@bundle.Price.ToString("C")</span>
                                        <span class="badge bg-secondary ms-2">Qty: @bundle.Quantity</span>
                                    </div>
                                    <small class="text-muted">@bundle.Quantity Ã— @bundle.MenuItem.Price.ToString("C") = @((bundle.Quantity * bundle.MenuItem.Price).ToString("C")) individually</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}