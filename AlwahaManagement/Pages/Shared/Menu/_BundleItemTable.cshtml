@using AlwahaLibrary.Services
@inject UserInfo UserInfo
@model (List<IGrouping<AlwahaLibrary.Models.ItemType, AlwahaLibrary.Models.BundleItem>> Bundles, bool IsRestore)

@if (!Model.Bundles.Any())
{
    <div class="alert alert-info text-center">
        <i class="fa-solid fa-info-circle me-2"></i>No bundles found.
    </div>
}

@foreach (var group in Model.Bundles)
{
    <div class="mb-5">
        <h5 class="mb-3 pb-2 border-bottom border-3">@group.Key.Name</h5>
        <div class="row">
            @foreach (var bundle in group.OrderBy(b => b.ItemType.Name))
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4 px-3">
                    <div class="card shadow-sm h-100 menu-item-card">
                        <div class="card-header py-3 position-relative clearfix" id="header-@bundle.BundleId" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);">
                            <div class="float-start">
                                <h5 class="card-title mb-0 text-white fw-bold">@bundle.ItemType.Name</h5>
                            </div>
                            @if (Model.IsRestore && UserInfo.CanRestore())
                            {
                                <button type="button" class="btn btn-sm btn-success float-end"
                                        title="Restore Bundle" onclick="confirmRestore('@bundle.ItemType.Name', '/Menu/RestoreBundle?id=@bundle.BundleId', 'bundle-list', '/Menu/GetBundlesList?isRestore=true')">
                                    <i class="fa-solid fa-trash-restore"></i> Restore
                                </button>
                            }
                            else
                            {
                                if (UserInfo.CanDelete())
                                {
                                    <button type="button" class="btn btn-sm btn-danger float-end"
                                            title="Delete Bundle" onclick="confirmDelete('@bundle.ItemType.Name', '/Menu/DeleteBundle?id=@bundle.BundleId', 'bundle-list', '/Menu/GetBundlesList')">
                                        <i class="fa-solid fa-trash"></i> Delete
                                    </button>
                                }
                                if (UserInfo.CanEdit())
                                {
                                    <button type="button" class="btn btn-sm btn-primary float-end"
                                            title="Edit Bundle" onclick="location.assign('/Menu/Bundles/Edit/@bundle.BundleId')">
                                        <i class="fa-solid fa-pencil"></i> Edit
                                    </button>
                                }
                            }
                        </div>
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mt-auto">
                                <div>
                                    <div>
                                        <span class="fs-5 fw-bold text-primary">@bundle.Price.ToString("C")</span>
                                        <span class="badge bg-secondary ms-2">Qty: @bundle.Quantity</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}