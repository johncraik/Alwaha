@page
@using AlwahaLibrary.Authentication
@using AlwahaLibrary.Services
@model IndexModel
@inject UserInfo UserInfo
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center py-5">
    <div class="mb-4">
        <h1 class="display-2 fw-bold mb-3 portal-title">
            Alwaha Management Portal
        </h1>
        <div class="portal-divider"></div>
    </div>

    <p class="lead text-muted mb-5 px-4">
        Welcome to the management portal. <br/>Use this system to update the menu, manage menu item types and tags, and configure website settings for Alwaha London.
    </p>

    <a href="https://www.alwahalondon.co.uk" target="_blank" class="btn btn-lg portal-btn shadow-sm">
        <i class="fa-solid fa-external-link-alt me-2"></i>Visit Alwaha London Website
    </a>
</div>


<!-- Menu Stats -->
<div class="my-4">
    <h3 class="mb-4 text-center">Menu Statistics</h3>
    <div class="row g-3 justify-content-center">
        <div class="col-6 col-md-4 col-lg-2-4">
            <div class="stat-card h-100">
                <div class="stat-icon">
                    <i class="fa-solid fa-utensils"></i>
                </div>
                <div class="stat-title">Menu Items</div>
                <div class="stat-value-boxes">
                    <div class="stat-box stat-box-available">@Model.MenuItemsStat.Available</div>
                    @if (Model.MenuItemsStat.Unavailable.HasValue)
                    {
                        <div class="stat-box stat-box-unavailable">@Model.MenuItemsStat.Unavailable</div>
                    }
                </div>
                <div class="mt-2">
                    <button class="btn btn-outline-primary btn-sm"
                            onclick="location.assign('/Menu/Index')">
                        View Menu Items
                    </button>
                    <button class="btn btn-outline-success btn-sm mt-1"
                            onclick="location.assign('/Menu/Edit')">
                        Create Menu Item
                    </button>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2-4">
            <div class="stat-card h-100">
                <div class="stat-icon">
                    <i class="fa-solid fa-layer-group"></i>
                </div>
                <div class="stat-title">Menu Sets</div>
                <div class="stat-value-boxes">
                    <div class="stat-box stat-box-available">@Model.MenuSetStats.Available</div>
                    @if (Model.MenuSetStats.Unavailable.HasValue)
                    {
                        <div class="stat-box stat-box-unavailable">@Model.MenuSetStats.Unavailable</div>
                    }
                </div>
                <div class="mt-2">
                    <button class="btn btn-outline-primary btn-sm"
                            onclick="location.assign('/Menu/Sets/Index')">
                        View Menu Sets
                    </button>
                    <button class="btn btn-outline-success btn-sm mt-1"
                            onclick="location.assign('/Menu/Sets/Edit')">
                        Create Menu Set
                    </button>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2-4">
            <div class="stat-card h-100">
                <div class="stat-icon">
                    <i class="fa-solid fa-box"></i>
                </div>
                <div class="stat-title">Bundle Items</div>
                <div class="stat-value-boxes">
                    <div class="stat-box stat-box-available">@Model.BundleItemsStat.Available</div>
                    @if (Model.BundleItemsStat.Unavailable.HasValue)
                    {
                        <div class="stat-box stat-box-unavailable">@Model.BundleItemsStat.Unavailable</div>
                    }
                </div>
                <div class="mt-2">
                    <button class="btn btn-outline-primary btn-sm"
                            onclick="location.assign('/Menu/Bundles/Index')">
                        View Menu Bundles
                    </button>
                    <button class="btn btn-outline-success btn-sm mt-1"
                            onclick="location.assign('/Menu/Bundles/Edit')">
                        Create Menu Bundle
                    </button>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2-4">
            <div class="stat-card h-100">
                <div class="stat-icon">
                    <i class="fa-solid fa-gear"></i>
                </div>
                <div class="stat-title">Item Types</div>
                <div class="stat-value-boxes">
                    <div class="stat-box stat-box-available">@Model.ItemTypesStat.Available</div>
                </div>
                <div class="mt-2">
                    <button class="btn btn-outline-primary btn-sm"
                            onclick="location.assign('/Menu/ItemTypes/Index')">
                        View Item Types
                    </button>
                    <button class="btn btn-outline-success btn-sm mt-1"
                            onclick="location.assign('/Menu/ItemTypes/Edit')">
                        Create Item Type
                    </button>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-2-4">
            <div class="stat-card h-100">
                <div class="stat-icon">
                    <i class="fa-solid fa-tags"></i>
                </div>
                <div class="stat-title">Item Tags</div>
                <div class="stat-value-boxes">
                    <div class="stat-box stat-box-available">@Model.ItemTagsStat.Available</div>
                </div>
                <div class="mt-2">
                    <button class="btn btn-outline-primary btn-sm"
                            onclick="location.assign('/Menu/Tags/Index')">
                        View Item Tags
                    </button>
                    <button class="btn btn-outline-success btn-sm mt-1"
                            onclick="location.assign('/Menu/Tags/Edit')">
                        Create Item Tag
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- User Stats (Admin Only) -->
@if (UserInfo.IsInRole(SystemRoles.Admin))
{
    <div class="container my-5">
        <h3 class="text-center">User Statistics</h3>
        <button class="btn btn-sm btn-outline-primary mb-1 me-2"
                onclick="location.assign('/Users/Index')">
            View Users
        </button>
        <button class="btn btn-sm btn-outline-success mb-1 me-2"
                onclick="location.assign('/Users/Create')">
            Create User
        </button>
        <div class="row g-3 justify-content-center">
            <div class="col-6 col-md-4 col-lg-2-4">
                <div class="stat-card stat-card-user h-100">
                    <div class="stat-icon">
                        <i class="fa-solid fa-users"></i>
                    </div>
                    <div class="stat-title">Total Users</div>
                    <div class="stat-value">@Model.UserStats.TotalUsers</div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2-4">
                <div class="stat-card stat-card-user h-100">
                    <div class="stat-icon">
                        <i class="fa-solid fa-user-shield"></i>
                    </div>
                    <div class="stat-title">Admins</div>
                    <div class="stat-value">@Model.UserStats.Admins</div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2-4">
                <div class="stat-card stat-card-user h-100">
                    <div class="stat-icon">
                        <i class="fa-solid fa-plus"></i>
                    </div>
                    <div class="stat-title">Can Create</div>
                    <div class="stat-value">
                        @Model.UserStats.CanCreate
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2-4">
                <div class="stat-card stat-card-user h-100">
                    <div class="stat-icon">
                        <i class="fa-solid fa-pen"></i>
                    </div>
                    <div class="stat-title">Can Edit</div>
                    <div class="stat-value">
                        @Model.UserStats.CanEdit
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-4 col-lg-2-4">
                <div class="stat-card stat-card-user h-100">
                    <div class="stat-icon">
                        <i class="fa-solid fa-trash"></i>
                    </div>
                    <div class="stat-title">Can Delete</div>
                    <div class="stat-value">
                        @Model.UserStats.CanDelete
                    </div>
                </div>
            </div>
        </div>
    </div>
}
