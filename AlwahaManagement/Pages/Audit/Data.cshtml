@page
@model AlwahaManagement.Pages.Audit.Data

@{
    ViewData["Title"] = "Data Audit Tracking";
}

<div class="mb-4">
    <h1>@ViewData["Title"]</h1>
    <p class="text-muted">Browse all entities and view their audit trails</p>
</div>

<div class="accordion" id="dataAuditAccordion">

    <!-- Menu Items -->
    <div class="accordion-item">
        <h2 class="accordion-header">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#menuItemsCollapse">
                <i class="fa-solid fa-utensils me-2"></i> Menu Items
            </button>
        </h2>
        <div id="menuItemsCollapse" class="accordion-collapse collapse show" data-bs-parent="#dataAuditAccordion">
            <div class="accordion-body">
                <h5 class="mb-3">Active Menu Items</h5>
                @if (Model.ActiveMenuItems.Any())
                {
                    @foreach (var group in Model.ActiveMenuItems)
                    {
                        <h6 class="text-muted mb-2">@group.Key.Name</h6>
                        <div class="table-responsive mb-4">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 40%;">Name</th>
                                        <th style="width: 20%;">Price</th>
                                        <th style="width: 20%;">Available</th>
                                        <th style="width: 20%;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in group.OrderBy(i => i.Name))
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Price.ToString("C")</td>
                                            <td>
                                                @if (item.IsAvailable)
                                                {
                                                    <span class="badge bg-success">Yes</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">No</span>
                                                }
                                            </td>
                                            <td>
                                                <a href="/Audit/Trail/MenuItems:@item.ItemId?isUser=false" class="btn btn-sm btn-primary">
                                                    <i class="fa-solid fa-clock-rotate-left"></i> View Trail
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No active menu items</p>
                }

                <h5 class="mb-3 mt-4">Deleted Menu Items</h5>
                @if (Model.DeletedMenuItems.Any())
                {
                    @foreach (var group in Model.DeletedMenuItems)
                    {
                        <h6 class="text-muted mb-2">@group.Key.Name</h6>
                        <div class="table-responsive mb-4">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th style="width: 60%;">Name</th>
                                        <th style="width: 20%;">Price</th>
                                        <th style="width: 20%;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in group.OrderBy(i => i.Name))
                                    {
                                        <tr class="table-danger">
                                            <td>@item.Name</td>
                                            <td>@item.Price.ToString("C")</td>
                                            <td>
                                                <a href="/Audit/Trail/MenuItems:@item.ItemId?isUser=false" class="btn btn-sm btn-primary">
                                                    <i class="fa-solid fa-clock-rotate-left"></i> View Trail
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted">No deleted menu items</p>
                }
            </div>
        </div>
    </div>

