@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row justify-content-center align-items-center min-vh-75">
    <div class="col-8">
        <div class="card shadow-lg border-0 login-card">
            <div class="card-header text-center py-4 login-header">
                <h2 class="mb-0 text-white fw-bold">
                    <i class="fas fa-shield-alt me-2"></i>
                    Welcome Back
                </h2>
            </div>
            <div class="card-body p-4 p-md-5">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.UserName" class="form-control form-control-lg login-input"
                               autocomplete="username" aria-required="true"
                               placeholder="name@example.com" />
                        <label asp-for="Input.UserName" class="text-muted">
                            <i class="fas fa-envelope me-1"></i> Email Address
                        </label>
                        <span asp-validation-for="Input.UserName" class="text-danger small"></span>
                    </div>

                    <div class="form-floating mb-4">
                        <input asp-for="Input.Password" class="form-control form-control-lg login-input"
                               autocomplete="current-password" aria-required="true"
                               placeholder="password" />
                        <label asp-for="Input.Password" class="text-muted">
                            <i class="fas fa-lock me-1"></i> Password
                        </label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-4 ps-0">
                        <div class="custom-control custom-checkbox d-flex align-items-center">
                            <input class="form-check-input me-2" type="checkbox" asp-for="Input.RememberMe" />
                            <label asp-for="Input.RememberMe" class="form-check-label text-muted">
                                Keep me signed in
                            </label>
                        </div>
                    </div>

                    <div class="d-grid">
                        <button id="login-submit" type="submit" class="btn btn-lg login-btn">
                            <span class="fw-semibold">Sign In</span>
                            <i class="fas fa-arrow-right ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
