@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row justify-content-center align-items-center min-vh-75">
    <div class="col-md-6 col-lg-5">
        <div class="card account-card shadow-lg">
            <div class="account-header text-center text-white">
                <i class="fas fa-key account-icon"></i>
                <h2 class="fw-bold mb-1">Forgot Password?</h2>
                <p class="mb-0 opacity-75">Enter your email to reset your password</p>
            </div>
            <div class="card-body p-4 p-md-5">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>
                    <div class="form-floating mb-4">
                        <input asp-for="Input.Email" class="form-control form-control-lg login-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="text-muted">
                            <i class="fas fa-envelope me-1"></i> Email Address
                        </label>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-lg login-btn">
                            <span class="fw-semibold">Send Reset Link</span>
                            <i class="fas fa-paper-plane ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
