@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="fw-bold mb-3"><i class="fas fa-key me-2 text-primary"></i>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.OldPassword" class="form-control login-input" autocomplete="current-password" aria-required="true" placeholder="Old password" />
        <label asp-for="Input.OldPassword" class="text-muted">
            <i class="fas fa-lock me-1"></i> Old Password
        </label>
        <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
    </div>
    <div class="form-floating mb-3">
        <input asp-for="Input.NewPassword" class="form-control login-input" autocomplete="new-password" aria-required="true" placeholder="New password" />
        <label asp-for="Input.NewPassword" class="text-muted">
            <i class="fas fa-lock me-1"></i> New Password
        </label>
        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
    </div>
    <div class="form-floating mb-4">
        <input asp-for="Input.ConfirmPassword" class="form-control login-input" autocomplete="new-password" aria-required="true" placeholder="Confirm password"/>
        <label asp-for="Input.ConfirmPassword" class="text-muted">
            <i class="fas fa-lock me-1"></i> Confirm Password
        </label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-lg login-btn w-100">
        <span class="fw-semibold">Update Password</span>
        <i class="fas fa-check ms-2"></i>
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
