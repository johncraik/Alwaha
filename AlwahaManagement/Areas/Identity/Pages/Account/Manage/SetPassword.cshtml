@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4 class="fw-bold mb-3"><i class="fas fa-key me-2 text-primary"></i>Set your password</h4>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="alert alert-info">
    <i class="fas fa-info-circle me-2"></i>
    You do not have a local username/password for this site. Add a local account so you can log in without an external login.
</div>

<form id="set-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Input.NewPassword" class="form-control login-input" autocomplete="new-password" placeholder="Password"/>
        <label asp-for="Input.NewPassword" class="text-muted">
            <i class="fas fa-lock me-1"></i> New Password
        </label>
        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
    </div>
    <div class="form-floating mb-4">
        <input asp-for="Input.ConfirmPassword" class="form-control login-input" autocomplete="new-password" placeholder="Password"/>
        <label asp-for="Input.ConfirmPassword" class="text-muted">
            <i class="fas fa-lock me-1"></i> Confirm Password
        </label>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
    </div>
    <button type="submit" class="btn btn-lg login-btn w-100">
        <span class="fw-semibold">Set Password</span>
        <i class="fas fa-check ms-2"></i>
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
