@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 class="fw-bold mb-3"><i class="fas fa-user me-2 text-primary"></i>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <div class="form-floating mb-3">
        <input asp-for="Username" class="form-control login-input" placeholder="Username" disabled />
        <label asp-for="Username" class="text-muted">
            <i class="fas fa-user me-1"></i> Username
        </label>
    </div>
    <div class="form-floating mb-4">
        <input asp-for="Input.PhoneNumber" class="form-control login-input" placeholder="Phone number"/>
        <label asp-for="Input.PhoneNumber" class="text-muted">
            <i class="fas fa-phone me-1"></i> Phone Number
        </label>
        <span asp-validation-for="Input.PhoneNumber" class="text-danger small"></span>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-lg login-btn w-100">
        <span class="fw-semibold">Save Changes</span>
        <i class="fas fa-save ms-2"></i>
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
