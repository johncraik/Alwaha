@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4 class="fw-bold mb-3 text-danger"><i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]</h4>

<div class="alert alert-danger" role="alert">
    <i class="fas fa-exclamation-circle me-2"></i>
    <strong>Warning!</strong> Deleting this data will permanently remove your account, and this cannot be recovered.
</div>

<form id="delete-user" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    @if (Model.RequirePassword)
    {
        <div class="form-floating mb-4">
            <input asp-for="Input.Password" class="form-control login-input" autocomplete="current-password" aria-required="true" placeholder="Password" />
            <label asp-for="Input.Password" class="text-muted">
                <i class="fas fa-lock me-1"></i> Confirm Password
            </label>
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>
    }
    <button class="btn btn-lg btn-danger w-100" type="submit">
        <i class="fas fa-trash me-2"></i>
        <span class="fw-semibold">Delete Data and Close My Account</span>
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
